# -*- mode: ruby -*-
# vi: set ft=ruby :

# Vagrantfile API/syntax version. Don't touch unless you know what you're doing!
VAGRANTFILE_API_VERSION = "2"

Vagrant.configure(VAGRANTFILE_API_VERSION) do |config|
  config.vm.box = "debian/jessie64"
  config.vm.hostname = "qipr"
  config.vm.synced_folder "../qipr", "/var/www/qipr/registry"
  config.vm.network "private_network", ip: "192.168.222.2"
  config.vm.define "qipr"

  config.notify_forwarder.port = 30000

  config.vm.provision "shell" do |s|
    s.path = "bootstrap.sh"
  end

  # Restart apache when all done (if using apache)
  config.vm.provision "shell", run: "always", inline: "service apache2 restart"

  config.trigger.after [:up] do
    if Vagrant::Util::Platform.darwin?
      system("open -a 'Google Chrome.app' http://192.168.222.2")
    end
  end

end
